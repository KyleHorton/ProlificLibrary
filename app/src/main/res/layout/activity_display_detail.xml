<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wood"
    tools:context="horton.kyle.prolificlibrary.DisplayDetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_menu"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="#000000"
            android:textSize="45sp"/>

        <TextView
            android:id="@+id/detail_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="author"
            android:textColor="#000000"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/detail_publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="publisher"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/detail_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="categories"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/detail_last_checked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="last checked out"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/detail_last_checked_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="last checked out by"
            android:textColor="#000000"
            android:textSize="20sp"/>

    </LinearLayout>


    <Button
        android:id="@+id/checkout"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/checkout"/>

    <Button
        android:id="@+id/updateBook"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/updateBook"/>

</LinearLayout>
